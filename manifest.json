{
	"manifest_version": 2,
	"name": "BTC2Fiat | by apoorvlathey",
	"version": "1.0",
	"description": "Converts selected BTC value to Popular Fiat currencies according to current market price.",
	"icons":{
		"128":"icon128.png",
		"48": "icon48.png",
		"16": "icon16.png"
	},
	"browser_action":{
		"default_icon": "icon16.png",
		"default_popup": "popup.html"
	},

	// "options_page": "options.html",

	"background": {
		"scripts": ["jquery-3.4.1.min.js","eventPage.js"], 
		"persistent": false
	},

	"permissions":[
		"storage",
		"notifications",
		"contextMenus"
	]
}