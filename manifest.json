{
	"manifest_version": 2,
	"name": "BTC2Fiat | by apoorvlathey",
	"version": "1.0",
	"description": "Converts selected BTC value to Popular Fiat currencies according to current market price.",
	"icons": {
		"128": "./icons/icon128.png",
		"48": "./icons/icon48.png",
		"16": "./icons/icon16.png"
	},
	"browser_action": {
		"default_icon": "./icons/icon16.png",
		"default_popup": "popup.html"
	},

	"background": {
		"scripts": ["scripts/jquery-3.4.1.min.js", "eventPage.js"],
		"persistent": false
	},

	"permissions": [
		"storage",
		"notifications",
		"contextMenus"
	]
}